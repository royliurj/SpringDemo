<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="address" class="com.roy.spring.spel.Address">
		<property name="city" value="#{'beijing'}"></property>
		<property name="street" value="wudaokou"></property>
	</bean>
	
	<bean id="car" class="com.roy.spring.spel.Car">
		<property name="brand" value="Audi"></property>
		<property name="price" value="50000"></property>
		<property name="perimeter" value="#{T(java.lang.Math).PI * 80}"></property>
	</bean>

	<bean id="person" class="com.roy.spring.spel.Person">
		<!-- 引用其它bean -->
		<property name="car" value="#{car}"></property>
		<!-- 引用其它bean的属性 -->
		<property name="city" value="#{address.city}"></property>
		<!-- 使用表达式运算符 -->
		<property name="info" value="#{car.price > 300000 ? 'jingling' : 'bailing'}"></property>
		<property name="name" value="roy"></property>
	</bean>

</beans>
