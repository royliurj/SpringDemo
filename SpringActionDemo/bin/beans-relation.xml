<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="address" class="com.roy.spring.autowire.Address"
		p:city="beijing" p:street="dazhognsi" scope="prototype"></bean>

	<!-- bean的继承：使用parent属性进行继承 
	<bean id="address2" class="com.roy.spring.autowire.Address" parent="address" p:street="adsf"></bean>
-->
	<bean id="car" class="com.roy.spring.autowire.Car"
		p:brand="Audi"></bean>

	<!-- bean的依赖：使用depends-on属性限制依赖的bean，没有则出错 
	<bean id="person" class="com.roy.spring.autowire.Person"	
		p:name="Roy" p:address-ref="address" depends-on="car"></bean>
		-->

</beans>
