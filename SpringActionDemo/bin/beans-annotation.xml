<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<!-- 指定Spring IOC容器扫描的包 
		base-package:扫描包及子包的类
		resource-pattern:只扫描repository下面的类  resource-pattern="repository/*.class"
		use-default-filters : 默认true，扫描整个包，如果为false ，则根据filter扫描
		
		context:exclude-filter: 排除哪些指定表达式的组件
			根据注解排除
		context:include-filter: 包含哪些组件，需要配合use-default-filters使用
	-->
	<context:component-scan  base-package="com.roy.spring.annotation">
		<!-- 	
		<context:exclude-filter type="annotation" expression="org.springframework.stereotype.Repository"/>
		
		<context:include-filter type="annotation" expression="org.springframework.stereotype.Repository"/>
		 
		 <context:exclude-filter type="assignable" expression="com.roy.spring.annotation.repository.UserRepository"/>
		 -->		 
	</context:component-scan>

</beans>
